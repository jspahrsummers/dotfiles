[core]
    editor = vim
    pager = view -
    excludesfile = ~/.dotfiles/global.gitignore
    whitespace = blank-at-eol,space-before-tab,indent-with-non-tab,-blank-at-eof,tabwidth=4
    fsyncobjectfiles = true
    preloadindex = true
    quotepath = true
[alias]
    wtf = blame
    co = checkout
    ci = commit
    st = status
    setjmp = commit
    longjmp = reset
    fork = branch
    join = merge
    wait = merge
    bg = branch
    fg = checkout
    barrier = rebase
    s = svn
    sub = submodule
    subst = submodule status
    sup = submodule update
    staged = diff --cached
    rba = rebase --abort
    rbc = rebase --continue
    patches = log -p --reverse
[color]
    ui = auto
    diff = false
    pager = false
    whitespace = trailing-space,space-before-tab
[diff]
    renames = copies
    mnemonicprefix = true
[status]
    submodulesummary = true
[branch]
    autosetuprebase = always
[push]
    default = upstream
[merge]
    stat = true
[rebase]
    stat = true
[pack]
    windowMemory = 1g
[advice]
    pushNonFastForward = false
    statusHints = false
