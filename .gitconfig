[core]
    editor = vim
    pager = view -
    excludesfile = ~/.dotfiles/global.gitignore
    whitespace = blank-at-eol,space-before-tab,-blank-at-eof,tabwidth=4
    fsyncobjectfiles = true
    preloadindex = true
    quotepath = true
[alias]
    wtf = blame
    co = checkout
    ci = commit
    st = status
    sub = submodule
    subst = submodule status
    sup = submodule update --init --recursive
    staged = diff --cached
    rba = rebase --abort
    rbc = rebase --continue
    patches = log -p --reverse
    grab = fetch -p --recurse-submodules
[color]
    ui = auto
    diff = false
    pager = false
    whitespace = trailing-space,space-before-tab
[diff]
    renames = copies
    mnemonicprefix = true
[status]
    submodulesummary = true
[branch]
    autosetuprebase = always
[branch "master"]
    mergeoptions = --no-commit
[push]
    default = upstream
[merge]
    ff = false
    stat = true
[rebase]
    stat = true
[pack]
    windowMemory = 1g
[advice]
    pushNonFastForward = false
    statusHints = false
